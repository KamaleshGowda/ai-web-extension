{
  "manifest_version": 3,
  "name": "Django Summarizer & Query",
  "version": "1.0",
  "description": "Summarize and query text using Django backend.",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["http://127.0.0.1:8000/*"],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
  }
}
